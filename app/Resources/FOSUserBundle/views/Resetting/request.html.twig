{% extends "base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Réinitialiser mon mot de passe{% endblock title %}

{% block body %}
    <div class="row">
        <div class="col s12 m6 offset-m3 l6 offset-l3 xl4 offset-xl4">
            <div class="card">
                <div class="card-image">
                    <img src="{{ asset('images/card/cacash.jpg') }}">
                </div>
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                    <div class="card-content">
                        <span class="card-title">Mot de passe oublié ?</span>

                        <div class="input-field">
                            <input type="text" id="username" name="username" required="required" />
                            <label for="username">{{ 'resetting.request.username'|trans }}</label>
                        </div>

                    </div>
                    <div class="card-action">
                        <button class="btn waves-effect waves-light" type="submit" id="_submit" name="_submit">{{ 'resetting.request.submit'|trans }}
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock body %}
