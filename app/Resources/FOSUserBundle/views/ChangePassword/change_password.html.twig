{% extends "base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Modifier mon mot de passe{% endblock title %}

{% block body %}
    <div class="row">
        <div class="col s12 m6 offset-m3 l6 offset-l3 xl4 offset-xl4">
            <h4 class="light">Modifier mon mot de passe</h4>
            <div class="card">
                {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password style-error' } }) }}
                <div class="card-content">
                    {{ form_widget(form) }}
                </div>
                <div class="card-action">
                    <button class="btn waves-effect waves-light" type="submit" id="_submit" name="_submit">{{ 'change_password.submit'|trans }}
                        <i class="material-icons right">send</i>
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock body %}
