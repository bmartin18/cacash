{% extends "base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Connexion{% endblock title %}

{% block body %}
    <div class="row">
        <div class="col s12 m6 offset-m3 l6 offset-l3 xl4 offset-xl4">
            <div class="card">
                <div class="card-image">
                    <img src="{{ asset('images/card/cacash.jpg') }}">
                </div>
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <div class="card-content">
                        <span class="card-title">Connexion</span>

                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}

                        <div class="input-field col s12">
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                            <label for="username">{{ 'security.login.username'|trans }}</label>
                        </div>

                        <div class="input-field col s12">
                            <input type="password" id="password" name="_password" required="required" />
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <p class="right">
                                <a href="{{ path('fos_user_resetting_request') }}">(mot de passe oubli√© ?)</a>
                            </p>
                        </div>

                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                    <div class="card-action">
                        <div class="row center-align">
                            <div class="col s12 m6">
                                <button class="btn waves-effect waves-light" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>
                            <div class="col s12 hide-on-med-and-up">&nbsp;</div>
                            <div class="col s12 m6">
                                <a href="{{ path('fos_user_registration_register') }}" class="btn btn-flat">Inscription</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            {% if error %}
                <div class="info error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

        </div>
    </div>
{% endblock body %}
